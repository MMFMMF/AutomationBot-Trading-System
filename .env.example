# AutomationBot Trading Platform - Environment Configuration Template
# Copy this file to .env and update with your specific values

# ===========================
# ENVIRONMENT CONFIGURATION
# ===========================
FLASK_ENV=development
DEBUG=True
API_HOST=0.0.0.0
API_PORT=8080

# ===========================
# DATABASE CONFIGURATION
# ===========================
DATABASE_PATH=data/trading_platform.db
DATABASE_BACKUP_ENABLED=True
DATABASE_BACKUP_RETENTION_DAYS=30

# ===========================
# LOGGING CONFIGURATION
# ===========================
LOG_LEVEL=INFO
LOG_DIRECTORY=logs
STRUCTURED_LOGGING=True

# ===========================
# SECURITY CONFIGURATION
# ===========================
SECRET_KEY=your-secret-key-here-change-in-production
SESSION_TIMEOUT=3600
CSRF_PROTECTION=True
RATE_LIMITING_ENABLED=True

# Admin access control
ADMIN_IPS=127.0.0.1,::1
AUTO_BLOCK_THRESHOLD=10.0

# ===========================
# API KEYS (External Services)
# ===========================

# Polygon.io API Key
POLYGON_API_KEY=your-polygon-api-key

# Alpha Vantage API Key  
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key

# Alpaca API Keys
ALPACA_API_KEY=your-alpaca-api-key
ALPACA_SECRET_KEY=your-alpaca-secret-key
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# TradeStation API Keys (if using)
TRADESTATION_API_KEY=your-tradestation-api-key
TRADESTATION_CLIENT_ID=your-tradestation-client-id
TRADESTATION_CLIENT_SECRET=your-tradestation-client-secret

# ===========================
# TRADING CONFIGURATION
# ===========================
TRADING_CAPITAL=50000.0
MAX_POSITIONS=5
RISK_PER_TRADE=0.02
DEFAULT_STRATEGY=mixed
SIGNAL_INTERVAL=30
AUTO_TRADING=False

# ===========================
# PROVIDER CONFIGURATION
# ===========================
PRICE_DATA_PROVIDER=polygon
EXECUTION_PROVIDER=paper
NEWS_PROVIDER=polygon
ANALYTICS_PROVIDER=internal

# ===========================
# PERFORMANCE CONFIGURATION
# ===========================
CACHE_ENABLED=True
CACHE_TTL=300
DATABASE_CONNECTION_POOL_SIZE=10
RESPONSE_COMPRESSION=True

# ===========================
# MONITORING CONFIGURATION
# ===========================
METRICS_ENABLED=True
HEALTH_CHECK_ENABLED=True
PERFORMANCE_MONITORING=True
SECURITY_AUDITING=True

# ===========================
# REDIS CONFIGURATION (Optional)
# ===========================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ===========================
# EMAIL CONFIGURATION (for alerts)
# ===========================
EMAIL_ENABLED=False
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@automationbot.com

# ===========================
# WEBHOOK CONFIGURATION
# ===========================
WEBHOOKS_ENABLED=False
DISCORD_WEBHOOK_URL=
SLACK_WEBHOOK_URL=

# ===========================
# BACKUP CONFIGURATION
# ===========================
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=backups/

# ===========================
# SSL/TLS CONFIGURATION
# ===========================
SSL_ENABLED=False
SSL_CERT_PATH=
SSL_KEY_PATH=

# ===========================
# DEPLOYMENT CONFIGURATION
# ===========================
DEPLOYMENT_ENVIRONMENT=development
DEPLOYMENT_VERSION=2.1
HEALTH_CHECK_TIMEOUT=60
GRACEFUL_SHUTDOWN_TIMEOUT=30